
pipeline {

    agent any
    environment {
        dotnet = 'C:\\Program Files\\dotnet\\dotnet.exe'
    }

    stages {
        
        stage ('Clean workspace') {
            steps {
                cleanWs()
            }
        }
        
        stage ('Verifying toolsets') {
            steps {
                bat '''
                    git
                    "C:\\Program Files\\dotnet\\dotnet.exe" --info
                '''
            }
        }

        stage('Checkout Stage') {
            steps {
                git credentialsId: '1efe5f58-ab50-4dbb-8aff-7cba115d80aa', url: 'https://github.com/beglinazarov/SampleDotnetWebApi.git', branch: 'master'
            }
        }

        stage("DotNet Restoring Packages") {
            steps {
                bat '"C:\\Program Files\\dotnet\\dotnet.exe" restore "%WORKSPACE%\\SampleDotnetWebApi.csproj"'
            }
        }

        stage('DotNet Build & Publish ') {
            steps {
                bat '"C:\\Program Files\\dotnet\\dotnet.exe" build "%WORKSPACE%\\SampleDotnetWebApi.csproj"' 
                bat '"C:\\Program Files\\dotnet\\dotnet.exe" publish -c release -o "Releases\\WebApi_${{BUILD_ID}}" --no-restore' 
            }
        }

        stage('DotNet Release Test') {
            steps {
                bat '"C:\\Program Files\\dotnet\\dotnet.exe" publish -c release -o "C:\\Program Files\\Releases\\WebApi_v${{env.BUILD_ID}}" --no-restore' 
            }
        }
    }
}
